{
    // 配置 glob 模式以排除文件和文件夹。
    "files.exclude": {
        "**/**/*.map": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true
    },
    "typescript.referencesCodeLens.enabled": true
    // "tslint.ignoreDefinitionFiles": false,
